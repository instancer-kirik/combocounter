# Makefile for Enhanced ComboCounter Simulation
# Builds a native executable with full audio modes and visual combo meter

CC = gcc
CFLAGS = -Wall -Wextra -std=c99 -g -O2 -D_GNU_SOURCE
LDFLAGS = -lm

# Source files
SOURCES = enhanced_simulation.c simple_combo_core.c turso_local.c
OBJECTS = $(SOURCES:.c=.o)
TARGET = combocounter_enhanced

# Default target
all: $(TARGET)

# Build the enhanced simulation executable
$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -o $(TARGET) $(LDFLAGS)
	@echo ""
	@echo "ðŸŽ‰ Enhanced ComboCounter build complete! Run with: ./$(TARGET)"
	@echo ""
	@echo "ðŸŽ® NEW FEATURES:"
	@echo "  ðŸ”Š Audio Modes: Silent, Beeps, Voice, Music"
	@echo "  ðŸ“Š Visual Combo Decay Bar with colors"
	@echo "  ðŸš€ Multiplier visualization"
	@echo "  ðŸ“ˆ Enhanced statistics tracking"
	@echo "  ðŸŽµ Real-time audio feedback simulation"
	@echo ""
	@echo "ðŸŽ¯ CONTROLS:"
	@echo "  SPACE     - Increment counter (good quality)"
	@echo "  P/G/B/M   - Perfect/Good/Partial/Miss quality"
	@echo "  W/S       - Switch between counters"
	@echo "  A         - Audio settings menu"
	@echo "  H         - Settings menu"
	@echo "  I         - Enhanced statistics"
	@echo "  Q/ESC     - Quit/Back"
	@echo ""

# Compile source files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -f $(OBJECTS) $(TARGET) combocounter_save.dat
	@echo "Clean complete"

# Run the enhanced simulation
run: $(TARGET)
	./$(TARGET)

# Debug build
debug: CFLAGS += -DDEBUG -g3
debug: $(TARGET)

# Install dependencies (if needed)
deps:
	@echo "No external dependencies required for enhanced simulation"
	@echo "Uses standard C libraries: math, time, termios"

# Show help
